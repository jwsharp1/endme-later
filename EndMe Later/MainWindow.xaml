<Window x:Class="EndMe_Later.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EndMe_Later"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Title="EndMe Later.exetreme" Height="438" Width="462.283"
        ShowInTaskbar="False"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid>
        <materialDesign:Snackbar>

        </materialDesign:Snackbar>
        <materialDesign:Card Margin="4,4,4,0" Height="281" >
            <Grid>
                <TextBlock x:Name="section1" HorizontalAlignment="Left" FontSize="22" Height="31" Margin="10,7,0,0" FontWeight="DemiBold" TextWrapping="Wrap" Text="1. Choose your options" VerticalAlignment="Top" Width="271"/>
                <CheckBox x:Name="sleepCheckBox" Margin="22,40,368,198">
                    <CheckBox.LayoutTransform>
                        <ScaleTransform ScaleX="2" ScaleY="2" />
                    </CheckBox.LayoutTransform>
                </CheckBox>
                <TextBlock x:Name="sleepTitle" HorizontalAlignment="Left" FontSize="22" Height="31" Margin="67,49,0,0" FontWeight="DemiBold" TextWrapping="Wrap" Text="Shutdown Timer" VerticalAlignment="Top" Width="182"/>
                <TextBlock x:Name="sleepDesc" HorizontalAlignment="Left" FontSize="14" Height="24" Margin="67,85,0,0" TextWrapping="Wrap" Text="Shut down your computer once the timer expires." VerticalAlignment="Top" Width="356"/>

                <CheckBox x:Name="volumeCheckBox" Margin="22,100,368,138">
                    <CheckBox.LayoutTransform>
                        <ScaleTransform ScaleX="2" ScaleY="2" />
                    </CheckBox.LayoutTransform>
                </CheckBox>
                <TextBlock x:Name="volumeTitle" HorizontalAlignment="Left" FontSize="24" Height="31" Margin="67,109,0,0" FontWeight="DemiBold" TextWrapping="Wrap" Text="Volume Reducer" VerticalAlignment="Top" Width="182"/>
                <TextBlock x:Name="volumeDesc" HorizontalAlignment="Left" FontSize="14" Height="26" Margin="67,145,0,0" TextWrapping="Wrap" Text="Progressively lower computer volume over time." VerticalAlignment="Top" Width="317"/>

                <TextBlock x:Name="section2" HorizontalAlignment="Left" FontSize="22" Height="31" Margin="10,200,0,0" FontWeight="DemiBold" TextWrapping="Wrap" Text="2. Set the desired time using the slider" VerticalAlignment="Top" Width="413"/>
                <Slider x:Name="slider" IsSnapToTickEnabled="True" TickFrequency="0.5"  Maximum="5" Margin="67,236,68,10" />
            </Grid>
        </materialDesign:Card>


        <materialDesign:Card Margin="4,150,126,0" Height="231">
            <Grid>
                <TextBlock x:Name="timeRemainingText" FontSize="18" Height="31" FontWeight="DemiBold" TextWrapping="Wrap" Text="Time Remaining" TextAlignment="Center" Margin="10,14,10,36"/>
                <TextBlock x:Name="timeRemaining" FontSize="24" Height="31" FontWeight="DemiBold" TextWrapping="Wrap" Text="0" TextAlignment="Center" Margin="28,40,28,0"/>
            </Grid>
        </materialDesign:Card>

        <Button x:Name="startButton" Content="Start" FontSize="24" Height="Auto" Background="LightGreen" Click="button_Click" Margin="228,299,120,21"/>
        <Button x:Name="undoButton" Content="Stop" FontSize="24" Background="IndianRed" Click="button1_Click" Height="Auto" Margin="344,299,10,21"/>
    </Grid>
</Window>
