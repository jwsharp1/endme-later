<Window x:Class="EndMe_Later.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EndMe_Later"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Title="EndMe Later.exetreme" Height="350" Width="661.283"
        ShowInTaskbar="False"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid>
        <materialDesign:Card Padding="4" Margin="4,4,3.667,0" Height="216" >
            <Grid>
                <CheckBox x:Name="sleepCheckBox" Margin="22,25,452.667,123">
                    <CheckBox.LayoutTransform>
                        <ScaleTransform ScaleX="2" ScaleY="2" />
                    </CheckBox.LayoutTransform>
                </CheckBox>
                <TextBlock x:Name="sleepTimerTextBlock" HorizontalAlignment="Left" FontSize="24" Height="31" Margin="67,40,0,0" FontWeight="DemiBold" TextWrapping="Wrap" Text="Sleep Timer:" VerticalAlignment="Top" Width="136"/>
                <Slider x:Name="sleepSlider" IsSnapToTickEnabled="True" TickFrequency="0.5"  Maximum="5" Margin="214,43,132.667,125" />
                <TextBlock x:Name="hoursText" FontSize="26" Height="31" Margin="544,38,10.667,0" FontWeight="DemiBold" TextWrapping="Wrap" Text="hours" VerticalAlignment="Top" Width="76"/>
                <TextBlock x:Name="sleepInfoTextBlock" TextAlignment="Center" HorizontalAlignment="Center" FontSize="26" Height="31" Margin="498,38,79.667,0" FontWeight="DemiBold" TextWrapping="Wrap" Text="{Binding ElementName=sleepSlider, Path=Value}" VerticalAlignment="Top" Width="53"/>

                <CheckBox x:Name="dndCheckBox" Margin="21,85,571.667,77" Visibility="Hidden">
                    <CheckBox.LayoutTransform>
                        <ScaleTransform ScaleX="2" ScaleY="2" />
                    </CheckBox.LayoutTransform>
                </CheckBox>
                <TextBlock x:Name="dndTimerTextBlock" Visibility="Hidden" HorizontalAlignment="Left" FontSize="24" Height="31" Margin="67,91,0,0" FontWeight="DemiBold" TextWrapping="Wrap" Text="Quiet Hours:" VerticalAlignment="Top" Width="151"/>
                <Slider x:Name="dndSlider" Visibility="Hidden" IsSnapToTickEnabled="True" TickFrequency="0.5"  Maximum="5" Margin="223,96,144,197" />
                <TextBlock x:Name="dndText" Visibility="Hidden" FontSize="26" Height="31" Margin="559,91,18,0" FontWeight="DemiBold" TextWrapping="Wrap" Text="hours" VerticalAlignment="Top" Width="76"/>
                <TextBlock x:Name="dndInfoTextBlock" Visibility="Hidden" TextAlignment="Center" HorizontalAlignment="Center" FontSize="26" Height="31" Margin="514,88,86,0" FontWeight="DemiBold" TextWrapping="Wrap" Text="{Binding ElementName=dndSlider, Path=Value}" VerticalAlignment="Top" Width="53"/>
            </Grid>
        </materialDesign:Card>


        <materialDesign:Card Padding="2" Margin="4,115,211,0" Height="188" >
            <TextBlock x:Name="sleepTime" TextAlignment="Left" HorizontalAlignment="Left" FontSize="18" Height="31" FontWeight="DemiBold" TextWrapping="Wrap" Text="{Binding Path=sleepTime}" VerticalAlignment="Top" Width="93" Margin="10,26,0,0"/>
        </materialDesign:Card>

        <Button x:Name="startButton" Content="Start" FontSize="36" Height="73" Margin="246,230,139,0" VerticalAlignment="Top" Background="LightGreen" Click="button_Click"/>
        <Button x:Name="undoButton" Content="Stop" FontSize="36" Margin="526,230,10,0" Background="IndianRed" Click="button1_Click" Height="73" VerticalAlignment="Top"/>
    </Grid>
</Window>
