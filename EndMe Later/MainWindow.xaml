<Window x:Class="EndMe_Later.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EndMe_Later"
        mc:Ignorable="d"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Title="EndMe Later.exetreme" Height="350" Width="661.283"
        ShowInTaskbar="False"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <Grid>
        <CheckBox x:Name="sleepCheckBox" Margin="27,31,582,244">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="2" ScaleY="2" />
            </CheckBox.LayoutTransform>
        </CheckBox>
        <TextBlock x:Name="sleepTimerTextBlock" HorizontalAlignment="Left" FontSize="24" Height="31" Margin="67,40,0,0" FontWeight="DemiBold" TextWrapping="Wrap" Text="Sleep Timer:" VerticalAlignment="Top" Width="136"/>
        <Slider x:Name="sleepSlider" IsSnapToTickEnabled="True" TickFrequency="0.5"  Maximum="5" Margin="223,48,144,245" />
        <TextBlock x:Name="hoursText" FontSize="26" Height="31" Margin="559,43,18,0" FontWeight="DemiBold" TextWrapping="Wrap" Text="hours" VerticalAlignment="Top" Width="76"/>
        <TextBlock x:Name="sleepInfoTextBlock" TextAlignment="Center" HorizontalAlignment="Center" FontSize="26" Height="31" Margin="514,43,86,0" FontWeight="DemiBold" TextWrapping="Wrap" Text="{Binding ElementName=sleepSlider, Path=Value}" VerticalAlignment="Top" Width="53"/>

        <CheckBox x:Name="dndCheckBox" Margin="27,83,575,184">
            <CheckBox.LayoutTransform>
                <ScaleTransform ScaleX="2" ScaleY="2" />
            </CheckBox.LayoutTransform>
        </CheckBox>
        <TextBlock x:Name="dndTimerTextBlock" HorizontalAlignment="Left" FontSize="24" Height="31" Margin="67,91,0,0" FontWeight="DemiBold" TextWrapping="Wrap" Text="Quiet Hours:" VerticalAlignment="Top" Width="151"/>
        <Slider x:Name="dndSlider" IsSnapToTickEnabled="True" TickFrequency="0.5"  Maximum="5" Margin="223,96,144,197" />
        <TextBlock x:Name="dndText" FontSize="26" Height="31" Margin="559,91,18,0" FontWeight="DemiBold" TextWrapping="Wrap" Text="hours" VerticalAlignment="Top" Width="76"/>
        <TextBlock x:Name="dndInfoTextBlock" TextAlignment="Center" HorizontalAlignment="Center" FontSize="26" Height="31" Margin="514,88,86,0" FontWeight="DemiBold" TextWrapping="Wrap" Text="{Binding ElementName=dndSlider, Path=Value}" VerticalAlignment="Top" Width="53"/>

        <TextBlock x:Name="statusText" TextAlignment="Center" HorizontalAlignment="Center" FontSize="26" Height="31" Margin="23,256,558.667,0" FontWeight="DemiBold" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="73"/>
        <Button x:Name="startButton" Content="Start" Height="48" Margin="101,247,284,0" VerticalAlignment="Top" Background="LightGreen" Click="button_Click"/>
        <Button x:Name="undoButton" Content="Undo" HorizontalAlignment="Left" Margin="435,247,0,0" Width="132" Background="IndianRed" Click="button1_Click" Height="48" VerticalAlignment="Top"/>
    </Grid>
</Window>
